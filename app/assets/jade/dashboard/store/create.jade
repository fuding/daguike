.dashboard.create
    sidebar(user='data.user' href-base='/dashboard/store')
    #content-wrapper
        .col-md-12
            br
            form.form-horizontal(ng-if="!data.store.id" name='create_form' novalidate  ng-submit="create.submit()" role="form")
                fieldset.form-inner
                    .form-group(ng-class="{ 'has-error' : ( invalid_name() || create_form.name.$invalid) && !create_form.name.$pristine  }")
                        .col-sm-1.control-label 店名
                        .col-sm-6
                            input.form-control(required placeholder="{{CREATE_MIN}}~{{CREATE_MAX}}位字符，不能全为数字" type="text" name="name" ng-model="create.name" ng-minlength="CREATE_MIN" ng-maxlength="CREATE_MAX")
                            .help-block(ng-show="( invalid_name() || create_form.name.$invalid) && !create_form.name.$pristine") {{CREATE_MIN}}~{{CREATE_MAX}}位字符，不能全为数字
