                    //- .form-group(ng-class="{ 'has-error' : (create.create_new != create.create_confirmation) && !create_form.create_confirmation.$pristine }")
                    //-   .col-sm-1.control-label 所在地
                    //-   .col-sm-6
                    //-     common-location(loc='loc')
                
                    .form-actions.form-group(ng-class="{'has-success':!!create.submit_success, 'has-error':!!create.submit_error}")
                        .col-sm-1
                        .col-sm-6
                            button.btn.btn-danger.full_width(type='submit' ng-disabled='( invalid_name() || create_form.name.$invalid)' ng-init="create.btn_info='创建店铺'") {{create.btn_info}}
                            .help-block.has-success(ng-show="create.submit_success") {{create.submit_success}}
                            .help-block.has-error(ng-show="create.submit_error") {{create.submit_error}}